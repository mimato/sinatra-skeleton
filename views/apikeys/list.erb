<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">API Keys</h3>
  </div>
  <table class="table table-condensed">
    <thead>
      <th>Name</th>
      <th>Identifier</th>
      <th></th>
    </thead>
    <tbody>
      <% apikeys.each do |apikey| %>
        <tr id="<%= "api-key-#{apikey.id}" %>"  >
          <td><%= h apikey.name %></td>
          <td><%= h apikey.identifier %></td>
          <td class="col-md-1">
            <form action="<%= "/apikeys/#{apikey.id}" %>" method="post">
              <input name="_method" type="hidden" value="delete" />
              <button type="submit" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Delete
              </button>
            </form>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
